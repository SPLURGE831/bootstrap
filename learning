+/* High-level API */
+typedef struct {
+	modem_table_t obj;
+	struct mod_init {
+		enum modem_std std;	// symbol mapping standard (see modem_table.h)
+	} init;
+
+	const char* input;
+	int in_len;
+
+	cf* output;
+	int *out_len;
+}mod_hl;
+
+int mod_initialize(mod_hl* hl);
+int mod_work(mod_hl* hl);
+int mod_stop(mod_hl* hl);
